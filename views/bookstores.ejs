<% include partials/header %>
	
	<div class='container'>

		<header class='jumbotron jumbotron-fluid'>
			<div class='container'>
				<h1 class='display-2'>bookly</h1>
				<a class='btn btn-info btn-sm' href='/bookstores/new'>Add a Bookstore</a>
			</div>
		</header>

		<div class='row justify-content-center align-items-start text-center'>
			<% bookstores.forEach((bookstore) => { %>
				<div class='col-lg-3 col-md-4 col-sm-6'>
					<div class='card border-dark mb-3'>
						<img class='card-header card-img-top' src = '<%= bookstore.image %>'>
						<div class='card-body'>
							<h5 class='card-title'><%= bookstore.name %></h5>
							<p class='card-text'>Placeholder text</p>
						</div>
					</div>		
				</div>
			<% }) %>
		</div>
		
	</div>

<% include partials/footer %>