<% include ../partials/header %>

<div class='container mt-5'>
	<h1 class='text-center mb-3'>Add a Bookstore</h1>

	<!-- Form to add a bookstore -->
	<div class='w-50 mx-auto'> <!--50% width, center horizontally-->
		<form action='/bookstores' method='POST'> <!--form sends data via post request-->
			<div class='form-group'>
				<label for='name'>Bookstore Name*</label>
				<input type='text' class='form-control' name='name' id='name' placeholder="Doyle's Books" required 
					oninvalid="this.setCustomValidity('Please enter a bookstore name')" oninput="setCustomValidity('')">
			</div>
			<div class='form-group'>
		    	<label for='address'>Bookstore's Address*</label>
		    	<input type='text' class='form-control' name='address' id='address' 
		    		placeholder='221B Baker Street, London, UK' required oninvalid="this.setCustomValidity('Please enter the bookstore\'s address')" oninput="setCustomValidity('')">
		  	</div>
			<div class='form-group'>
				<label for='image'>Photo of Bookstore*</label>
				<input type='text' class='form-control' name='image' id='image' placeholder='Enter image url' required 
					oninvalid="this.setCustomValidity('Please enter an image url')" oninput="setCustomValidity('')">
			</div>
			<div class='form-group'>
		   	<label for='description'>Description*</label>
 		   	<textarea class='form-control' name='description' id='description' rows='3' 
 		   		placeholder='Provide a brief description of bookstore (150 character limit)' required minlength="10" 
 		   		maxlength="150" oninvalid="this.setCustomValidity('Please enter a description between 10 and 150 characters')" 
 		   		oninput="setCustomValidity('')"></textarea>
		  </div>
		  <button type='submit' class='btn btn-info'>Submit</button>
		  <a class='btn btn-outline-info' href='/bookstores'>Go Back</a>
		</form>
	</div>	
	
</div>

<% include ../partials/footer %>