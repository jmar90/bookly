<% include ../partials/header %>
<div class='container mt-5'>

	<div id='bookstore-show-card' class='card w-75 mb-3 shadow-sm mx-auto'>
		<img class='card-img-top' src="<%= bookstore.image %>" alt="Bookstore image">
		<div class='card-body'>
			<h1 id='bookstore-show-name' class='card-title'><%= bookstore.name %></h1>
			<p class='card-text'><%= bookstore.description %></p>
			<p class='card-text text-info-edit'>Submitted by: <%= bookstore.author.username %></p>

			<form class='d-inline' action='/bookstores/<%= bookstore._id %>?_method=DELETE' method='POST'>
				<button class='btn btn-outline-danger btn-sm'>Delete bookstore</button>
			</form>
			<a class='btn btn-outline-warning btn-sm' href="/bookstores/<%= bookstore._id %>/edit">Edit bookstore info</a>
			<a class='btn btn-outline-info btn-sm' href='/bookstores/<%= bookstore._id %>/reviews/new'>Add a Review</a>

			<hr class='mt-4 mb-4 mx-auto'>

			<h2 id='bookstore-show-sub' class='card-subtitle mb-3'>Reviews</h2>
			<% bookstore.reviews.forEach(function(review){ %>
				<p class='card-text'>
					<span class='card-subtitle h6'><%= review.author.username %>:</span>
					<%= review.text %>
				</p>
			<% }) %>
		</div>
	</div>
	
</div>
<% include ../partials/footer %>